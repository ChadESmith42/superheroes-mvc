@model IEnumerable<SuperheroesInc.DATA.EF.Cours>

@{
    ViewBag.Title = "Available Courses";
}

<h2>@ViewBag.Title</h2>

<p>
    @Html.ActionLink("Add New Course", "Create", null, htmlAttributes: new { @class = "btn btn-primary" })
</p>

<div class="container">
    <div class="row">

        @foreach (var item in Model)
            {
            <div class="col-md-4">
                <h4>
                    @Html.DisplayNameFor(model => model.Name): @Html.DisplayFor(modelItem => item.Name)
                </h4>
                <h4>
                    @Html.DisplayNameFor(model => model.Description): @Html.DisplayFor(modelItem => item.Description)
                </h4>
                <h4>
                    @Html.DisplayNameFor(model => model.Date): @Html.DisplayFor(modelItem => item.Date)
                </h4>
                <h4>
                    @Html.DisplayNameFor(model => model.Location): @Html.DisplayFor(modelItem => item.Location)
                </h4>
                <h4>
                    @Html.DisplayNameFor(model => model.CourseType.Type): @Html.DisplayFor(modelItem => item.CourseType.Type)
                </h4>
                <div class="btn-group">
                    @Html.ActionLink("Details", "Details", new { id = item.ID }, htmlAttributes: new { @class = "btn btn-primary" })


                    @if (User.IsInRole("Admin"))
                {

                        @Html.ActionLink("Edit", "Edit", new { id = item.ID }, htmlAttributes: new { @class = "btn btn-primary" })
                        @Html.ActionLink("Delete", "Delete", new { id = item.ID }, htmlAttributes: new { @class = "btn btn-danger" })
                        <a href="@Url.Action("Create","CourseCharacters" )" class="btn btn-primary">Add Instructor</a>

                    }
                </div>
            </div>
        }
    </div>
</div>
</div>




