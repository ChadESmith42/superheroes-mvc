@model IEnumerable<SuperheroesInc.DATA.EF.CourseCharacter>

@{
    ViewBag.Title = "Course Instructors Details";
}

<h2>@ViewBag.Title</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table data-table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Character.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cours.Name)
            </th>
            <th>
                Details
            </th>
            <th>
                Admin
            </th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Character.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Cours.Name)
                </td>
                <td>
                    @Html.ActionLink("Details", "Details", new { id = item.ID }, htmlAttributes: new { @class = "btn btn-primary" })
                </td>

                @if (User.IsInRole("Admin"))
                {
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.ID }, htmlAttributes: new { @class = "btn btn-primary" })
                        @Html.ActionLink("Delete", "Delete", new { id = item.ID }, htmlAttributes: new { @class = "btn btn-danger" })
                    </td>
                }

            </tr>
        }
    </tbody>

</table>
